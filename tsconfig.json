{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "lib": ["esnext", "dom"]
    },
    "include": ["src/**/*"],
    "exclude": [
        "node_modules/**/*",
        "**/*.spec.ts"
    ]
}